{
  "manifest_version": 3,
  "name": "Secure Exam Protocol",
  "version": "1.1",
  "description": "Secure exam extension with webcam monitoring, alerts, and shortcut blocking.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab",
    "desktopCapture"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*",
        "http://localhost:3000/*"
      ],
      "js": ["utils.js", "content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
